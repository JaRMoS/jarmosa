<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="jarmos.app">
    <uses-sdk android:minSdkVersion="8" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:label="@string/app_name" android:name="jarmos.app.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="jarmos.app.activity.ModelListActivity"></activity>
        <activity android:name="jarmos.app.activity.kermor.SimulationActivity"></activity>
        <activity android:name="jarmos.app.activity.ShowModelActivity"></activity>
        <activity android:name="jarmos.app.activity.BrowseActivity"></activity>
        <activity android:name="jarmos.app.activity.rb.RBActivity"></activity>
        <activity android:name="jarmos.app.activity.rb.RBVisualization"></activity>
        <activity android:name="jarmos.app.activity.rb.OutputPlotterActivity"></activity>
		
		<uses-library android:name="android.test.runner" />
    </application>
    
    <instrumentation android:name="android.test.InstrumentationTestRunner"
    android:label="JaRMoSA tests" android:targetPackage="jarmosa.app"/>
</manifest>
